<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.brighterbrain.retrofit1.MainActivity">

    <TextView
        android:text="lastupdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Lastupdated"
        android:layout_above="@+id/refresh"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="44dp" />

    <TextView
        android:text="temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="51dp"
        android:id="@+id/textView_temperature"
        android:layout_marginBottom="86dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refresh"
        android:text="Refersh"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_Lastupdated" />

    <TextView
        android:text="city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_city"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp" />


</RelativeLayout>
